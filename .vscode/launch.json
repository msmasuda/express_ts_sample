  "version": "0.2.0",
  "configurations": [
    {
      "name": "デバッグ起動",
      "type": "pwa-node",
      "request": "launch",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "args": ["src/index.ts", "--transpile-only"],
